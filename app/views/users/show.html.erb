<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <div style="display: flex; align-items: baseline;">
        <h3 class="page-heading" style="margin-right: 10px;">
          <%= "#{@user.name}さんのマイページ" %>
        </h3>
        <% if current_user == @user %>
          <h4>
            <span><%= link_to "編集する", edit_user_path(current_user) %></span>
          </h4>
        <% end %>
      </div>

      <table class="table">
        <tbody>
          <tr>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
        </tbody>
      </table>
      
      <h2 class="page-heading">
        <div class="font20">
          <%= "ツイート一覧" %>
        </div>
      </h2>
      
      <div class="user__card">
        <%= render partial: 'fails/fail' , collection: @user.fails %>
      </div>
    </div>
  </div>
</div>