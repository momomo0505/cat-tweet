<%= form_with model: @fail, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
        <%= f.text_field :title, id:"fail_title" %>

                <% if @fail.errors.any? %>
                <div class="error_message">
  <div id="error_explanation">
    <h2><%= pluralize(@fail.errors.count, "error") %> </h2>
    <ul>
      <% @fail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
    </div>
<% end %>

    <button type="button" id="addAdoptionText">里親募集</button>
  </div>

  <div class="field">
    <%= f.label :story, "内容" %><br />
    <%= f.text_area :story, class: :form__text, id:"fail_story" %>
  </div>

  <div class="field">
    <%= f.label :prefecture, "撮影地" %><br />
    <%= f.select :prefecture, options_for_select(PREFECTURES) %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"fail_image" %>
  </div>

  <div class="actions">
    <%= f.submit "ツイート", class: :form__btn  %>
  </div>
<% end %>