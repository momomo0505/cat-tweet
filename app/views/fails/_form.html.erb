<%= form_with model: @fail, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"fail_title" %>
  </div>

  <div class="field">
    <%= f.label :story, "内容" %><br />
    <%= f.text_area :story, class: :form__text, id:"fail_story" %>
  </div>

  <div class="field">
    <%= f.label :learning, "解決したいこと" %><br />
    <%= f.text_area :learning, class: :form__text, id:"fail_learning" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像（任意）" %><br />
    <%= f.file_field :image, id:"fail_image" %>
  </div>

  <div class="actions">
    <%= f.submit "投函する", class: :form__btn  %>
  </div>
<% end %>